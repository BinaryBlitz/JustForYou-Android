<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorControlNormal">@color/primary</item>
    <item name="colorControlActivated">@color/primary</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="ToolbarStyleLight" parent="@style/ThemeOverlay.AppCompat.ActionBar">
    <item name="colorControlNormal">@color/colorPrimary</item>
    <item name="colorControlActivated">@color/colorPrimary</item>
    <item name="android:textColorPrimary">@color/colorPrimary</item>
    <item name="android:textColor">@color/colorPrimary</item>
    <item name="actionButtonStyle">@style/Widget.AppCompat.ActionButton</item>
    <item name="selectableItemBackground">?android:selectableItemBackground</item>
    <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
    <item name="colorControlHighlight">@color/colorAccent</item>
  </style>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="TabsLayoutAppearance" parent="TextAppearance.Design.Tab">
    <item name="textAllCaps">true</item>
  </style>

  <style name="AppThemeStatusBar" parent="AppTheme">
    <item name="android:windowTranslucentStatus">true</item>
  </style>

  <style name="JustForYouEditTextStyle" parent="TextAppearance.AppCompat">
    <item name="android:colorAccent">@android:color/black</item>
    <item name="android:textColorHint">@color/blackColor</item>
    <item name="android:colorActivatedHighlight">@android:color/black</item>
    <item name="android:colorControlNormal">@color/blackColor</item>
    <item name="android:colorControlActivated">@android:color/black</item>
    <item name="android:colorControlHighlight">@color/blackColor</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@android:color/black</item>
  </style>

  <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:textColorPrimary">@android:color/white</item>
  </style>

  <style name="CalendarAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">
    <item name="android:textColor">@color/blackColor</item>
    <item name="android:textSize">12sp</item>
  </style>

</resources>
