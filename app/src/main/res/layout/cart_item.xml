<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/classContainerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:animateLayoutChanges="true"
    android:background="@color/whiteColor"
    android:orientation="vertical"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    >
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >

    <ImageButton
        android:id="@+id/closeAlert"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="right|top"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:alpha="1"
        android:background="?android:selectableItemBackgroundBorderless"
        android:clickable="true"
        android:padding="16dp"
        android:src="@drawable/ic_close_grey_24dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="16dp"
        android:orientation="vertical"
        >

      <me.grantland.widget.AutofitTextView
          android:id="@+id/programTitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:maxHeight="16sp"
          android:maxLines="2"
          android:textColor="@color/default_base_text"
          android:textSize="18sp"
          android:textStyle="normal"
          tools:text="Гипохолестириновое питание"
          />

      <me.grantland.widget.AutofitTextView
          android:id="@+id/blockTitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:maxHeight="16sp"
          android:maxLines="2"
          android:textColor="@color/greyColor"
          android:textSize="16sp"
          android:textStyle="normal"
          tools:text="Гипохолестириновое питание"
          />

      <TextView
          android:id="@+id/programsPrice"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:text="@string/program_price"
          android:textAllCaps="false"
          android:textColor="@color/primary"
          android:textSize="14sp"
          />
    </LinearLayout>
  </FrameLayout>
</android.support.v7.widget.CardView>
