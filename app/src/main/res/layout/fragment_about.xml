<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/backgroundColor"
    >
  <android.support.v7.widget.CardView
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:card_view="http://schemas.android.com/apk/res-auto"
      android:id="@+id/programContainerView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:animateLayoutChanges="true"
      android:background="@color/whiteColor"
      android:orientation="vertical"
      card_view:cardCornerRadius="4dp"
      card_view:cardElevation="1dp"
      >

    <TextView
        android:id="@+id/programAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="@color/greyColor"
        android:textSize="16sp"
        android:textStyle="normal"
        autofit:minTextSize="14sp"
        tools:text="Just for you Just for you Just for you  Just for you  Just for you
        Just for you  Just for you Just for you Just for you Just for you
        Just for you  Just for you  Just for you  Just for you "
        />

  </android.support.v7.widget.CardView>
</RelativeLayout>
